---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../consts';
---

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta name="description" content="Build financial freedom, honor God, and reclaim your time with proven passive income strategies.">
  <BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
  <!-- title>Your Path to Freedom</title -->
  <style>
    body {
      font-family: Arial, sans-serif;
      line-height: 1.6;
      margin: 0;
      padding: 0;
      background-color: #f9f9f9;
      color: #333;
    }
    header {
      background-color: #0073e6;
      color: white;
      padding: 20px 10%;
      text-align: center;
    }
    header h1 {
      margin: 0;
    }
    section {
      padding: 20px 10%;
    }
    section h2, section h3 {
      color: #0073e6;
    }
    .cta-button {
      background-color: #0073e6;
      color: white;
      padding: 10px 20px;
      text-decoration: none;
      border-radius: 5px;
      margin-top: 10px;
      display: inline-block;
    }
    .cta-button:hover {
      background-color: #005bb5;
    }
    .articles-grid {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
      gap: 20px;
    }
    .articles-grid article {
      background: white;
      border: 1px solid #ddd;
      border-radius: 8px;
      padding: 15px;
      box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
    }
    .read-more {
      color: #0073e6;
      text-decoration: none;
    }
    .read-more:hover {
      text-decoration: underline;
    }
    footer {
      background-color: #333;
      color: white;
      text-align: center;
      padding: 10px 0;
      margin-top: 20px;
    }
  </style>
</head>
<body>
	<Header />
